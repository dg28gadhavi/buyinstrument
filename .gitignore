.yarn/install-state.gz       # Yarn installation state
.yarn/cache/                 # Yarn cache
.yarn/unplugged/             # Unplugged Yarn packages
.yarn/build-state.yml        # Yarn build state file
.yarn/releases/              # Yarn release information
